@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" href="~/logogachoi.png" type="image/png">
    <title>CLB GÀ CHỌI C3 - Đăng nhập</title>
    <style>
        :root {
            --bg: #000000;
            --card: #1a1a1a;
            --accent: #facc15;
            --muted: #d1d5db;
            --success: #84cc16;
            --danger: #ef4444;
            font-family: Inter, ui-sans-serif, system-ui;
        }

        body {
            margin: 0;
            background: linear-gradient(180deg, #000 0%, #1a1a1a 100%);
            color: var(--accent);
            display: grid;
            place-items: center;
            padding: 24px;
            height: 100vh;
        }

        .card {
            max-width: 420px;
            width: 100%;
            background: var(--card);
            border-radius: 12px;
            padding: 28px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.8);
        }

        label {
            color: var(--accent);
            font-size: 13px;
            margin-bottom: 8px;
            display: block
        }

        input {
            width: 90%;
            padding: 12px 14px;
            margin-bottom: 16px;
            border-radius: 8px;
            border: 1px solid rgba(255,255,255,0.1);
            background: rgba(0,0,0,0.4);
            color: var(--accent);
            font-size: 14px;
        }

        .btn {
            background: var(--accent);
            color: #000;
            padding: 12px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            width: 100%;
        }

        .text-danger {
            color: var(--danger);
            font-size: 13px
        }
    </style>
</head>
<body>
    <main class="card">
        <h1>Đăng nhập</h1>
        <form id="account" method="post">
            <hr />
            <!-- Hiển thị lỗi model -->
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert">
                @if (ViewData.ModelState[""]?.Errors.Count > 0)
                {
                    foreach (var error in ViewData.ModelState[""].Errors)
                    {
                        <div>@error.ErrorMessage</div>
                    }
                }
            </div>

            <div>
                <label for="email">Email</label>
                <input id="email" type="email" name="Input.Email" autocomplete="username" placeholder="name@example.com" required value="@Model.Input?.Email" />
            </div>

            <div>
                <label for="password">Mật khẩu</label>
                <input id="password" type="password" name="Input.Password" autocomplete="current-password" placeholder="password" required />
            </div>

            <!-- Hiển thị thông báo lỗi riêng -->
            @if (TempData["LoginError"] != null)
            {
                <div class="text-danger" style="margin-top: 10px;">@TempData["LoginError"]</div>
            }

            <button id="login-submit" type="submit" class="btn">Đăng nhập</button>

            <div style="margin-top: 15px; text-align: center;">
                <a href="/" class="btn btn-secondary" style="text-decoration: none; padding: 8px 15px;">← Trở về trang chủ</a>
            </div>
        </form>
    </main>

</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
