@model webdaga.Models.articlesModel

<h2>@ViewData["Title"]</h2>

<form action="/admin/articles/Create" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" class="form-control" value="0" />

    <div class="form-group">
        <label>Tên</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ảnh (URL)</label>
        <input asp-for="ImgUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Video (URL)</label>
        <input asp-for="VideoUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mô tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <input type="submit" value="Lưu" class="btn btn-primary" />
    <a href="/admin/articles/Index" class="btn btn-secondary">Hủy</a>
</form>
